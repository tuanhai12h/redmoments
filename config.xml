<?xml version='1.0' encoding='utf-8'?>
<widget android-versionCode="3" id="com.ihanux.coke" ios-CFBundleVersion="3" version="0.0.1" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>Red Moments</name>
    <description>
		A simple application build base on Red Moments.
	</description>
    <author email="tuanhai12h@gmail.com" href="http://ihanux.com">
		iHanux
	</author>
    <preference name="webviewbounce" value="false" />
    <preference name="AutoHideSplashScreen" value="true" />
    <preference name="SplashScreen" value="screen" />
    <preference name="SplashScreenDelay" value="1000" />
    <preference name="FadeSplashScreenDuration" value="100" />
    <preference name="ShowSplashScreenSpinner" value="false" />
    <preference name="orientation" value="portrait" />
    <content src="index.html" />
    <plugin name="cordova-plugin-whitelist" spec="1" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <preference name="android-minSdkVersion" value="19" />
        <preference name="android-targetSdkVersion" value="23" />
        <allow-intent href="market:*" />
        <icon density="ldpi" src="resources/android/icons/ldpi.png" />
        <icon density="mdpi" src="resources/android/icons/mdpi.png" />
        <icon density="hdpi" src="resources/android/icons/hdpi.png" />
        <icon density="xhdpi" src="resources/android/icons/xhdpi.png" />
        <icon density="xxhdpi" src="resources/android/icons/xxhdpi.png" />
        <icon density="xxxhdpi" src="resources/android/icons/xxxhdpi.png" />
        <splash density="land-hdpi" src="resources/android/splash/splash-land-hdpi.png" />
        <splash density="land-ldpi" src="resources/android/splash/splash-land-ldpi.png" />
        <splash density="land-mdpi" src="resources/android/splash/splash-land-mdpi.png" />
        <splash density="land-xhdpi" src="resources/android/splash/splash-land-xhdpi.png" />
        <splash density="port-hdpi" src="resources/android/splash/splash-port-hdpi.png" />
        <splash density="port-ldpi" src="resources/android/splash/splash-port-ldpi.png" />
        <splash density="port-mdpi" src="resources/android/splash/splash-port-mdpi.png" />
        <splash density="port-xhdpi" src="resources/android/splash/splash-port-xhdpi.png" />
    </platform>
    <platform name="ios">
        <preference name="deployment-target" value="8.0" />
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
        <icon height="180" src="resources/ios/icons/Icon-60@3x.png" width="180" />
        <icon height="60" src="resources/ios/icons/Icon-60.png" width="60" />
        <icon height="120" src="resources/ios/icons/Icon-60@2x.png" width="120" />
        <icon height="76" src="resources/ios/icons/Icon-76.png" width="76" />
        <icon height="152" src="resources/ios/icons/Icon-76@2x.png" width="152" />
        <icon height="40" src="resources/ios/icons/Icon-Spotlight-40.png" width="40" />
        <icon height="80" src="resources/ios/icons/Icon-Spotlight-40@2x.png" width="80" />
        <icon height="57" src="resources/ios/icons/Icon.png" width="57" />
        <icon height="114" src="resources/ios/icons/Icon@2x.png" width="114" />
        <icon height="72" src="resources/ios/icons/Icon-72.png" width="72" />
        <icon height="144" src="resources/ios/icons/Icon-72@2x.png" width="144" />
        <icon height="167" src="resources/ios/icons/Icon-iPadPro@2x.png" width="167" />
        <icon height="29" src="resources/ios/icons/Icon-small.png" width="29" />
        <icon height="58" src="resources/ios/icons/Icon-small@2x.png" width="58" />
        <icon height="87" src="resources/ios/icons/Icon-small@3x.png" width="87" />
        <icon height="50" src="resources/ios/icons/Icon-50.png" width="50" />
        <icon height="100" src="resources/ios/icons/Icon-50@2x.png" width="100" />
        <splash height="480" src="resources/ios/splash/Default~iphone.png" width="320" />
        <splash height="960" src="resources/ios/splash/Default@2x~iphone.png" width="640" />
        <splash height="1024" src="resources/ios/splash/Default-Portrait~ipad.png" width="768" />
        <splash height="2048" src="resources/ios/splash/Default-Portrait@2x~ipad.png" width="1536" />
        <splash height="768" src="resources/ios/splash/Default-Landscape~ipad.png" width="1024" />
        <splash height="1536" src="resources/ios/splash/Default-Landscape@2x~ipad.png" width="2048" />
        <splash height="1136" src="resources/ios/splash/Default-568h@2x~iphone.png" width="640" />
        <splash height="1334" src="resources/ios/splash/Default-667h.png" width="750" />
        <splash height="2208" src="resources/ios/splash/Default-736h.png" width="1242" />
        <splash height="1242" src="resources/ios/splash/Default-Landscape-736h.png" width="2208" />
    </platform>
    <plugin name="cordova-plugin-crop" spec="~0.1.0" />
    <engine name="ios" spec="~4.4.0" />
    <engine name="android" spec="~6.2.3" />
</widget>
